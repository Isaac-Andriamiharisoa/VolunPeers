<div class="eventindex">

  <div class="search-container col-12">
    <div class="search-text col-4">
      Causes
    </div>

    <div class="search-bar col-4">
      <%= form_with(url: events_path, method: "get") do |f| %>
        <%= f.button type:"submit", class: "button-search" do%>
          <i class="fa fa-search"></i>
        <% end %>
        <%= f.text_field :search, placeholder: "Search", class: "search-field" %>
      <% end %>
    </div>
  </div>

  <div class="event-container">
    <% @events.each do |event| %>
        <%= link_to event_path(event), class:"event-card" do  %>

        <div class="event-card-pic-container">
          <% if event.photo.attached? %>
            <%= cl_image_tag event.photo.key, alt: "dropdown menu", class: "event-card-picture"%>
          <% else %>
            <%= image_tag "logo-space.png", alt: "A planet", class: "event-card-picture" %>
          <% end %>
      </div>


        <div class="event-card-details">
          <h1><%= event.title %></h1>
          <br>
          <p><%= event.description %></p>
        </div>

        <div class="event-card-icons">
          <p><%= event.start_date.strftime("%d %^b") %> <i class="fa-regular fa-calendar-days fa-2xl" style="color: #3a1700;"></i></p>
          <br>
          <p><%= event.country %> <i class="fa-solid fa-location-dot fa-2xl" style="color: #3a1700;"></i></p>
          <br>
          <% case event.action %>
            <% when 'Trees to Plant' %>
              <i class="fa-solid fa-tree"></i>

            <% when 'People to Help' %>
              <i class="fa-solid fa-person"></i>

            <% when 'Batiment to Build' %>
              <i class="fa-solid fa-house-circle-check"></i>

            <% when 'Animal to Save' %>
              <i class="fa-solid fa-shield-dog"></i>

            <% when 'Litter to Clean' %>
              <i class="fa-solid fa-recycle"></i>
          <% end %>
          <p><%= event.quantity %></p>
        </div>
        <% end %>
    <% end %>
  </div>

</div>
