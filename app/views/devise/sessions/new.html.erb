<div class="form-container col-4 d-flex justify-content-center">

  <%= simple_form_for(resource, as: resource_name, html: { class: "login-form col-12" } , url: session_path(resource_name)) do |f| %>
    <h1 class="page-title">Log in</h1>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <div class="form-extra">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= link_to "Forgot your password?", new_user_password_path, class: "button-primary-revert-sm" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button button-primary" %>
      <a href="/users/sign_up#signup-anchor" class="button-primary-revert">Sign up</a>
    </div>
  <% end %>
</div>
