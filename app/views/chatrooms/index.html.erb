        <div class="col-6">
          <div class="pt-3 pe-3" data-mdb-perfect-scrollbar="true" style="position: relative; height: 400px">
            <div class="messages">
              <% chatroom.messages.each do |message| %>
                <%= render partial: 'messages/message', locals: { message: } %>
              <% end %>
              <div data-chatroom-subscription-target="latestMessages"></div>
            </div>
          <div class="text_field">
            <%= simple_form_for [chatroom, @message], html: {class: "d-flex"} do |f| %>
              <%= f.input :content,
                label: false,
                placeholder: "Message ##{chatroom.name}",
                html: {class: "textfield"},
                wrapper_html: {class: "flex-grow-1"},
                data: {target: "cleartextField"}
              %>
            <%= f.submit "Send", class: "btn btn-primary mb-3" %>
              <% end %>
          </div>
        </div>
      </div>

        <div class="col-3">
          <div class="profile-sidebar">
