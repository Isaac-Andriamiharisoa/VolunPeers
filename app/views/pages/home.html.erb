<div class="banner d-flex flex-column justify-content-center align-items-center">
  <h1 class="text-center">
    "Where Hearts Unite, Change Ignites.
    <br>
    Make a differrence!"
  </h1>
  <%= link_to "Join a cause", events_path, class: "button button-banner" %>
</div>

<div class="countdown d-flex justify-content-center col-12">
  <div class="countdown-container col-8 px-4 d-flex justify-content-between">
    <div class="countdown-text col-4 d-flex flex-column justify-content-center align-items-center">
      <h2 class="my-2">
        <%= @event.first.title %>
      </h2>
      <%= link_to "Help us", event_path(@event.first), class: "my-2 button button-primary" %>
    </div>
    <div class="countdown-date col-7 d-flex justify-content-around align-items-center text-center">
      <div class="dates col-3">
        <h1>4</h1>
        <p>Days</p>
      </div>
      <div class="dates col-3">
        <h1>13</h1>
        <p>hours</p>
      </div>
      <div class="dates col-3">
        <h1>21</h1>
        <p>minutes</p>
      </div>
      <div class="dates col-3">
        <h1>54</h1>
        <p>seconds</p>
      </div>
    </div>
  </div>
</div>

